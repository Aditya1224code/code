#include <iostream>
using namespace std;
class vehicle{
  public:
  void drivevehicle(){
      cout<<"drive safe"<<endl;
  }
};
class car:public vehicle{
  public:
  void gettires(){
      cout<<"4 tires"<<endl;
  }
  
  
};
int main() {
    car c;
    c.gettires();
    c.drivevehicle();

    return 0;
}
